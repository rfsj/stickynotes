<% content_for :title do %>
  Sticky notes &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>
 
<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"><%= entry.task_name %></p>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold">Difficulty: <%= entry.difficulty %></span></p>
            <p><span class="has-text-weight-bold">Points: <%= entry.points %></span></p>
            <p class="italic"> Created at <%= time_ago_in_words(entry.created_at) %></p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', entry, class:"card-footer-item button is-link has-text-white" %>
          <%= link_to 'Edit', edit_entry_path(entry), class:"card-footer-item button is-link has-text-white" %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-footer-item button is-link has-text-white" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="columns is-centered mt-6">
  <%= link_to "Ver todas as tarefas", archive_index_path, class: "button is-link is-outlined is-centered" %>
</div>

