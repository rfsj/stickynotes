<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>
      <div class="message-body">
      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>

  <div class="field">
    <%= form.label :task_name, class:"label" %>
    <%= form.text_field :task_name, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :difficulty, class:"label"  %>
    <%= form.text_field :difficulty, class:"input"  %>
  </div>

  <div class="field">
    <%= form.label :points, class:"label"  %>
    <%= form.number_field :points, class:"input"  %>
  </div>

  <div class="field">
    <div class="select">
      <%= form.label :points, class:"label"  %>
      <%= form.select :category_id, Category.all.collect {|u| [u.title, u.id]}, {}, class:"select"  %>
    </div>
  </div>
<br>

  <div class="actions">
    <%= form.submit class:"button is-link" %>
  </div>
<% end %>
